{
  "container": {
    "type": "DOCKER",
    "docker": {
        "image": "yanglei99/spark_mesos",
        "network": "HOST",
        "portMappings": [ ]
    },
	"volumes": [
	      {
	    	  "containerPath": "/spark/job/CloudantDF.py",
	    	  "hostPath": "./CloudantDF.py",
	          "mode": "RW"
	      },
	      {
	    	  "containerPath": "/spark/job/cloudant-spark.jar",
	    	  "hostPath": "./cloudant-spark.jar",
	          "mode": "RW"
	      }
	]
  },
  "id": "spark/mesos.docker",
  "instances": 1,
  "cpus": 1,
  "mem": 1024,
  "uris": [
           "https://s3-us-west-1.amazonaws.com/mydata.yl/CloudantDF.py",
           "https://s3-us-west-1.amazonaws.com/mydata.yl/cloudant-spark.jar"
           ],
  "env":{
	  "SPARK_MASTER":"mesos://zk://master.mesos:2181/mesos",
      "SPARK_ADDITIONAL_CONFIG":"--conf spark.mesos.executor.docker.image=yanglei99/spark_mesos --conf spark.cloudant.host=your.host --conf spark.cloudant.username=your.username --conf spark.cloudant.password=your.password",
	  "SPARK_ADDITIONAL_JARS":"--jars cloudant-spark.jar",
	  "SPARK_JOB": "CloudantDF.py"
  }
}